<div class="container form-container">
<div class="form-group row col-10">
    <%= render 'shared/errors', obj: @user %></div>
    <div class="form-group row text-center col-10">
        <%= form_with model: @user, class: "shadow p-3 mb-2 rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :username, class: "col-2 col-form-label form-text" %>
                <div class="col-10">
                    <%= f.text_field :username, class: "form-control shadow rounded form-text", placeholder:"Username" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :first_name, class: "col-2 col-form-label form-text" %>
                <div class="col-10">
                    <%= f.text_field :first_name, class: "form-control shadow rounded form-text", placeholder:"First Name" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :last_name, class: "col-2 col-form-label form-text" %>
                <div class="col-10">
                    <%= f.text_field :last_name, class: "form-control shadow rounded form-text", placeholder:"Last Name" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :blood_group, class: "col-2 col-form-label form-text" %>
                <div class="col-10">
                    <%= f.text_field :blood_group, class: "form-control shadow rounded form-text", placeholder:"Blood Group" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :age, class: "col-2 col-form-label form-text" %>
                <div class="col-10">
                    <%= f.text_field :age, class: "form-control shadow rounded form-text", placeholder:"Age" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label form-text" %><br/>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control shadow rounded form-text", placeholder:"Enter an email" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :password, class: "col-2 col-form-label form-text" %><br/>
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control shadow rounded form-text", placeholder:"Choose a password" %>
                </div>
            </div>
            <br>
            <div class="text-center">
                <%= f.submit (@user.new_record? ? "Sign Up" : "Update Account"), class: "btn navbar-home-text btn-lg" %>
            </div>
        <% end %>
        


