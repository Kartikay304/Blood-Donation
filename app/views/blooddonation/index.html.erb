<div class="page-content mt-4">
    <div class="form-v10-content">
        <%= render 'shared/messages' %>
        <div class="form-detail rounded", id="myform">
            <div class="form-left">
                <h2>Donate Blood</h2>
                <div class="form-row">HELLO
                </div>
            </div>
            <br>
            <div class="form-right">
                <h2>Create Post</h2><br><br>
                <div class="form-row">
                    <%= form_with model: @post, local: true do |f| %>
                        <div class="form-row " >
                            <%= f.text_field :title, placeholder:"Enter Title",class: "form-text" %>
                        </div>
                        <div class="form-group">
                            <div class="form-row form-row-3">
                                <%= f.text_field :username, value: Current.user.username,class: "form-text" %>
                            </div>
                            <div class="form-row form-row-4">
                                <%= f.select :blood_group ,["A+","A-","B+","B-","AB+","AB-","O+","O-"],{prompt: "Select Blood Group"},{class: "form-text"} %>
                            </div>
                        </div>
                        <div class="form-row " >
                            <%= f.text_field :description, placeholder:"Enter Description",class: "form-text" %>
                        </div>
                        <hr>
                        <div class="rounded register rights text-right">
                            <%= f.submit "Post",class: "register text-color" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div> 
</div>
