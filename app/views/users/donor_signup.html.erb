<div class="container">
<div class="form-group row col-10">
    <%= render 'shared/errors', obj: @user %></div>
    <div class="form-group row text-center col-10">
        <%= form_with model: @user, class: "shadow p-3 mb-2 bg-info rounded", local: true do |f| %>
            <div class="form-group row">
                <%= f.label :username, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.text_field :username, class: "form-control shadow rounded", placeholder:"Enter a username" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
                <div class="col-10">
                    <%= f.email_field :email, class: "form-control shadow rounded", placeholder:"Enter an email" %>
                </div>
            </div>
            <br>
            <div class="form-group row">
                <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
                <div class="col-10">
                    <%= f.password_field :password, class: "form-control shadow rounded", placeholder:"Choose a password" %>
                </div>
            </div>
            <br>
            <div class="text-center">
                <%= f.submit class: "btn btn-outline-light btn-lg" %>
            </div>
        <% end %>
        <div class="mb-3">
        <a class="text-info" href="/">[ Cancel and Return to Home ]</a>
        </div>
    </div>
</div>