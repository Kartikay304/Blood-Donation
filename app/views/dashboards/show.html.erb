<div class="limiter col-xs col-sm col-md col-lg"><h3 class="submain-heading text-center">APPROVE LOGS</h3><br>
    <div class="wrap-table100 col-xs col-sm col-md col-lg">
        <div class="table100 ver1 m-b-110">
            <div class="table100-head">
                <table>
                    <thead>
                        <tr class="row100 head">
                            <th class="cell100 column1">Username</th>
                            <th class="cell100 column2">Blood-Group</th>
                            <th class="cell100 column3">Blood-Donated</th>
                            <th class="cell100 column4">Blood-Received</th>
                            <th class="cell100 column10">Approve</th>
                            <th class="cell100 column11">Camp</th>
                            <th class="cell100 column12">Created-At</th>
                            <th class="cell100 column9">Updated-At</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="table100-body js-pscroll">
                <table>
                    <tbody>
                        <% Dashboard.order('updated_at DESC').each do |t| if t.approved== 1%>
                            <tr class="row100 body">
                                <td class="cell100 column1"><%= t.username%></td>
                                <td class="cell100 column2"><%= t.blood_group %></td>
                                <td class="cell100 column3"><%= t.donated %> ml</td>
                                <td class="cell100 column4"><%= t.received %> ml</td>
                                <td class="cell100 column10"><%= t.approved %></td>
                                <td class="cell100 column11"><%= t.camp %></td>
                                <td class="cell100 column12"><%= time_ago_in_words(t.created_at) %> ago</td>
                                <td class="cell100 column9"><%= time_ago_in_words(t.updated_at) %> ago</td>
                            </tr>
                        <% end %><% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
                                        
