<div class="container"> 
   <%= render 'shared/messages'%>
</div>
<div class="limiter col-xs col-sm col-md col-lg"><h3 class="submain-heading text-center">APPROVE BLOOD DONATION REQUEST</h3><br>
    <div class="wrap-table100 col-xs col-sm col-md col-lg">
        <div class="table100 ver1 m-b-110 ">
            <div class="table100-head">
                <table>
                    <thead>
                        <tr class="row100 head">
                            <th class="cell100 column1">Username</th>
                            <th class="cell100 column2">Blood-Group</th>
                            <th class="cell100 column3">Blood-Donated</th>
                            <th class="cell100 column4">Approve</th>
                            <th class="cell100 column5">Camp</th>
                            <th class="cell100 column6">Created-At</th>
                            <th class="cell100 column7">Updated-At</th>
                            <th class="cell100 column8">EDIT</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="table100-body js-pscroll">
                <table>
                    <tbody>
                        <% Dashboard.all.each do |t| if t.approved == 0 && t.received == 0%>
                            <tr class="row100 body">
                                <td class="cell100 column1"><%= t.username%></td>
                                <td class="cell100 column2"><%= t.blood_group %></td>
                                <td class="cell100 column3"><%= t.donated %> ml</td>
                                <td class="cell100 column4"><%= t.approved %></td>
                                <td class="cell100 column5"><%= t.camp %></td>
                                <td class="cell100 column6"><%= time_ago_in_words(t.created_at) %> ago</td>
                                <td class="cell100 column7"><%= time_ago_in_words(t.updated_at) %> ago</td>
                                <td class="cell100 column8"><%=  link_to 'Edit', edit_dashboard_path(t.id), class: "btn btn-outline-danger" %></td>
                            </tr>
                        <% end %><% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="limiter col-xs col-sm col-md col-lg"><h3 class="submain-heading text-center">APPROVE BLOOD RECEIVED REQUEST</h3><br>
