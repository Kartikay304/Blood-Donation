<div class="container">
   <%= render 'shared/messages'%></div>
   <h3 class="submain-heading text-center">APPROVE REQUEST</h3>
   <div class= "container">
        <div class="form-v10-content">
            <%= form_with model: @dashboard, class: "form-detail rounded", id: "myform", local: true do |f| %>
                <div class="form-left">
                    <h2>General Infomation</h2>
                    <div class="form-row " >
                        <%= f.text_field :username, placeholder:"Username", disabled: :true, class: "form-text text-muted" %>
                    </div>
                    <div class="form-group">
                        <div class="form-row form-row-1">
                            <%= f.text_field :blood_group, placeholder:"First Name",class: "form-text" %>
                        </div>
                        <div class="form-row form-row-2">
                            <%= f.text_field :donated, placeholder:"Last Name",class: "form-text" %>
                        </div>
                    </div>
                    <div class="form-row">
                        <%= f.text_field :received, placeholder:"Age",class: "form-text" %>
                    </div>
                    <div class="form-group">
                        <div class="form-row form-row-3">
                            <%= f.text_field :approved, class: "form-text text-muted" %>
                        </div>
                    </div>
                    <hr>
                    <div class="text-lefts rounded">
                        <%= link_to "Dashboard", dashboards_path(Current.user.id),class: "register_2 text-lefts rounded text-center text-color" %>
                    </div>
                    <div class="rounded register rights text-right">
                        <%= f.submit "Update",class: "register text-color" %>
                    </div>
                    <br><br>
                </div>
            <% end %>
        </div>
    </div>


